@model IEnumerable<SampleShop.Models.ItemV2>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary" style="display:inline">Available Items</h1>
        </div>
        @if (ViewBag.manager) {
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Add" style="right:0">Add</a>
        </div>
        }
    </div>
     @if (Model.Count() > 0)
     {
         int counter = 0;
         @while (counter < Model.Count())
         {
            <div class="row">
                <div class="col">
                    <a asp-action="Detail" asp-route-id="@Model.ElementAt(counter).Id" class="btn-block" style="background-color: lavender;text-align: center;height:175px;border-radius:25px;">
                        @Model.ElementAt(counter).name
                        <p>@Model.ElementAt(counter).price $</p>
                        <img src="/ItemV2/GetImage/@Model.ElementAt(counter).Id" height="100" width="150">
                    </a>
                 </div>
                 @{counter++;}
                 @if (counter < Model.Count())
                 {
                     <div class="col">
                         <a asp-action="Detail" asp-route-id="@Model.ElementAt(counter).Id" class="btn-block" style="background-color: lavender;text-align: center;height:175px;border-radius:25px;">
                             @Model.ElementAt(counter).name
                             <p>@Model.ElementAt(counter).price $</p>
                             <img src="/ItemV2/GetImage/@Model.ElementAt(counter).Id" height="100" width="150">
                         </a>
                     </div>
                     counter++;
                    }
                    @if (counter < Model.Count())
                     {
                           <div class="col">
                               <a asp-action="Detail" asp-route-id="@Model.ElementAt(counter).Id" class="btn-block" style="background-color: lavender;text-align: center;height:175px;border-radius:25px;">
                                   @Model.ElementAt(counter).name
                                   <p>@Model.ElementAt(counter).price $</p>
                                   <img src="/ItemV2/GetImage/@Model.ElementAt(counter).Id" height="100" width="150">
                               </a>
                             </div>
                       counter++;
                     }
            </div>
         }
      }
     else
     {
         <p style="text-align:center;"> No items Found</p>
     }
</div>

